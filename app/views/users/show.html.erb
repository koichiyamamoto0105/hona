<% if @user == current_user %>
	<h3>マイページ</h3>
<% else %>
    <h3><%= @user.name %>さんのページ</h3>
<% end %>


<table class="table">
	<tr><%= attachment_image_tag(@user, :profile_image, :fill, 100, 100, fallback: "no_image.jpg") %></tr>

	<tr>
		<th><%= t('.username') %></th>
		<th><%= @user.nickname %></th>
	</tr>

	<tr>
		<th><%= t('.country') %></th>
		<th><%= @user.country_name %></th>
  </tr>

</table>


<% if @user == current_user %>
 <%= link_to "マイページ編集", edit_user_path(@user.id) %>

<%#= link_to "投稿一覧", edit_user_path(@user.id) %>
<%= link_to "いいねしたスポット一覧", user_favorites_path(@favorite_list) %>
<% end %>