 <div class="col-lg-1 col-lg-offset-1 search-bar">
   <div class="search-box">
     <%= form_with url: search_path, method: :get, local: true do |f| %>
      <i class="fas fa-search"></i>
      <%= f.text_field :content, class: "search_form" %><br>

      <div class="form-group"><%= f.select :model, options_for_select({ t('.serachspot') => "map", t('.hashtag') => "hashtag" }) %></div>
      <div class="form-group"><%= f.select :method, options_for_select({  t('.exact') => "perfect",  t('.forward') => "forward",  t('.backward') => "backward",  t('.partial') => "partial" }) %></div>
      <div class="form-group"><%= f.submit t('.searchbutton') %></div>
     <% end %>
   </div>
 </div>